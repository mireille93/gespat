<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory name="session">
    <!-- CONFIGURATION FOR THE DB -->
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <!-- Driver definition db -->
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gespatient?createDatabaseIfNotExist=true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"/>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
    <!-- HABILITA A EXIBIÇÃO DO SQL GERADO PELO HIBERNATE E FORMATA-O -->
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <!-- HABILITA A ATUALIZAÇÃO AUTOMÁTICA DA ESTRUTURA DE TABELAS PELO HIBERNATE -->
    <property name="hibernate.hbm2ddl.auto">update</property>
    <!-- CONFIGURAÇÕES DO POOL DE CONEXÕES-->
    <property name="c3p0.min_size">1</property>
    <property name="c3p0.max_size">20</property>
    <property name="c3p0.timeout">300</property>
    <property name="c3p0.max_statements">80</property>
    <property name="c3p0.idle_test_period">300</property>
    <!-- LISTA DE ENTIDADES -->
    <mapping class="com.ifi.gde.entity.entities.Dossier"/>
    <mapping class="com.ifi.gde.entity.entities.Maladie"/>
    <mapping class="com.ifi.gde.entity.entities.Medecin"/>
    <mapping class="com.ifi.gde.entity.entities.Patient"/>
    <mapping class="com.ifi.gde.entity.entities.Region"/>
    <mapping class="com.ifi.gde.entity.entities.Utilisateur"/>
  </session-factory>
</hibernate-configuration>
